#!/bin/bash

# helper method for qstat_full
# takes stripped children file and reorganizes into separate rows
# for each job

full_helper() {

    NUMBERED=`grep "\w" xml_children.txt | cat -n`
    LINES=`cat xml_children.txt | wc -l`

    echo $LINES

    for LINE in `seq  9 $LINES` # count by 9s, each job has 9 lines
    do
	ROW_COUNT=0
	for (( i=1; i<=9; i++))
	do
	    echo "$NUMBERED" | grep ' '$i'\t'
	done

	echo $LINE
    done
    
    

}

full_helper